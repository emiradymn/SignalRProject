        <script type="text/javascript">
            $(document).ready(() => {
                var connection = new signalR.HubConnectionBuilder().withUrl("https://localhost:7002/SignalRHub").build();
                $("#connstatus").text(connection.state);

                connection.start().then(() => {
                    $("#connstatus").text(connection.state);
                    setInterval(() => {
                        connection.invoke("SendStatistic");
                    }, 1000);
                }).catch((err) => { console.log(err) });

                connection.on("ReceiveCategoryCount", (value) => {
                    $("#categorycount").text(value);
                });

                connection.on("ReceiveProductCount", (value2) => {
                    $("#productcount").text(value2);
                });

                connection.on("ReceiveActiveCategoryCount", (value3) => {
                    $("#activecategorycount").text(value3);
                });

                connection.on("ReceivePassiveCategoryCount", (value4) => {
                    $("#passivecategorycount").text(value4);
                });

                connection.on("ReceiveMenuTableCount", (value5) => {
                    $("#menutablecount").text(value5);
                });

                connection.on("ReceiveTotalOrderCount", (value6) => {
                    $("#totalordercount").text(value6);
                });

                connection.on("ReceiveActiveOrderCount", (value7) => {
                    $("#activeordercount").text(value7);
                });

                connection.on("ReceiveTotalMoneyCaseAmount", (value9) => {
                    $("#totalmoneycaseamount").text(value9 + "₺");
                });

                connection.on("ReceiveProductNameByMaxPrice", (value10) => {
                    $("#productnamebymaxprice").text(value10);
                });

                connection.on("ReceiveProductNameByMinPrice", (value11) => {
                    $("#productnamebyminprice").text(value11);
                });

                connection.on("ReceiveMenuTableCount", (value12) => {
                    $("#menutablecount").text(value12);
                });

                connection.on("ReceiveLastOrderPrice", (value13) => {
                    $("#lastorderprice").text(value13 + "₺");
                });
            });
        </script>

