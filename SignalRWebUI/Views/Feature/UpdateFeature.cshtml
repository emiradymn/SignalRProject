@model UpdateFeatureDto
@{
ViewData["Title"] = "CreateFeature";
Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İndirimli Öne Çıkarılan İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title"> Öne Çıkarılan Girişi</div>
                        </div>
                        <input type="hidden" asp-for="FeatureID">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Title1">Öne Çıkarılan Adını Giriniz</label>
                                <input type="text" class="form-control" asp-for="Title1" id="Title1">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Description1">Öne Çıkarılan İndirim Oranını Giriniz</label>
                                <input type="text" class="form-control" asp-for="Description1" id="Description1">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="TitleD2">Öne Çıkarılan Görselini Giriniz</label>
                                <input type="text" class="form-control" asp-for="TitleD2" id="TitleD2">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Description2">Öne Çıkarılan Açıklamasını Giriniz</label>
                                <input type="text" class="form-control" asp-for="Description2" id="Description2">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Title3">Öne Çıkarılan Açıklamasını Giriniz</label>
                                <input type="text" class="form-control" asp-for="Title3" id="Title3">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Description3">Öne Çıkarılan Açıklamasını Giriniz</label>
                                <input type="text" class="form-control" asp-for="Description3" id="Description3">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">İndirimli Öne Çıkarılanü Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>