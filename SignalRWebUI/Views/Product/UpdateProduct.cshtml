@model UpdateProductDto
@{
Layout = "~/Views/AdminLayout/Index.cshtml";
ViewData["Title"] = "UpdateProduct";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ürün İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Ürün Güncelle</div>
                        </div>
                        <input type="hidden" asp-for="ProductID">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="ProductName">Ürün Adı</label>
                                <input type="text" class="form-control" asp-for="ProductName" id="ProductName">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Price">Ürün Fiyatı</label>
                                <input type="text" class="form-control" asp-for="Price" id="Price">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="ImageUrl">Ürün Görseli</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="ImageUrl">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="CategoryID">Ürün Kategorisini Seçiniz</label>
                                @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>) ViewBag.v, new {
                                    @class = "form-control" })
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Description">Ürün Açıklaması</label>
                                <input type="text" class="form-control" asp-for="Description" id="Description">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Ürünü Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>